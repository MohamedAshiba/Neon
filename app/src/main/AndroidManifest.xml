<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashiba.neon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/launch_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launch_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LoginActivity" />
        <activity android:name=".views.ForgotPasswordActivity" />
        <activity android:name=".views.RegisterActivity" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme"/>

        <activity android:name=".views.PostDetailsActivity" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <activity android:name=".views.SecondMainActivity"/>
        <activity android:name=".views.ThirdMainActivity" />
        <activity android:name=".views.SearchActivity"
            android:parentActivityName=".views.MainActivity"></activity>
    </application>

</manifest>